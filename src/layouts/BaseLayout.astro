---
import BaseHead from "@components/baselayout/header/BaseHead.astro";
import Header from "@components/baselayout/header/Header.astro";
import Footer from "@components/baselayout/footer/Footer.astro";
import SideBar from "@components/baselayout/sidebar/SideBar.astro";
import { SITE_TITLE, SITE_DESCRIPTION } from "../config";
const { image, title = SITE_TITLE, description = SITE_DESCRIPTION, includeSidebar = true, sideBarActiveItemID } = Astro.props;
---
<!DOCTYPE html>
<html lang="en" data-theme="night">
  <head><BaseHead title={title} description={description} image={image} /></head>
  <body>
    <div class="bg-base-100 drawer lg:drawer-open">
      <input id="my-drawer" type="checkbox" class="drawer-toggle" />
      <div class="drawer-content bg-base-100">
        <Header title={SITE_TITLE} />
        <div class="md:flex md:justify-center">
          <main class="relative p-6 pt-10 lg:max-w-[1100px] sm:min-w-[500px] w-[100vw] md:w-[100vw] sm:w-[100vw] min-w-full">
            <slot />
          </main>
        </div>
        <Footer />
      </div>
      {includeSidebar && <SideBar sideBarActiveItemID={sideBarActiveItemID} />}
    </div>
  </body>
</html>
