---
import BaseLayout from "../../layouts/BaseLayout.astro";
import HorizontalCard from "../../components/HorizontalCard.astro";
import { getCollection } from "astro:content";

export async function getStaticPaths({ paginate }) {
  const posts = await getCollection('hddreports');
  posts.sort((a, b) => b.data.reportDate.valueOf() - a.data.reportDate.valueOf());
}

const { page } = Astro.props;
---

<BaseLayout title="HDD Reports" sideBarActiveItemID="hddreports">
  <div class="mb-5">
    <div class="text-3xl w-full font-bold">HDD Reports</div>
  </div>

  {
    page.data.length === 0 ? (
      <div class="bg-base-200 border-l-4 border-secondary w-full p-4 min-w-full">
        <p class="font-bold">Sorry!</p>
        <p>There are no reports to show at the moment. Check back later!</p>
      </div>
    ) : (
      <ul>
        {page.data.map((post) => (
          <>
            <HorizontalCard
              title={{post.data.make} + " - " + {post.data.serial}}
              desc={"Capacity: " + {post.data.capacity} + "| Report Date: " + {post.data.reportDate}}
              url={"/blog/" + post.slug}
            />
            <div class="divider my-0" />
          </>
        ))}
      </ul>
    )
  }
</BaseLayout>