---
import { CollectionEntry, getCollection } from 'astro:content';
import { hddSchema } from '../../content/config';
import PostLayout from '../../layouts/PostLayout.astro';

export async function getStaticPaths() {
    const postEntries = await getCollection('hddreports');
    return postEntries.map(entry => ( { 
        params: { slug: entry.slug }, props: { entry },
    } ));
}

interface Props {
    entry: CollectionEntry<"hddreports">;
}

const { entry } = Astro.props;
const post : hddSchema = entry.data;
const { Content } = await entry.render();
---

<PostLayout 
    title={post.make + " - " + post.serial}
    desc={"Report Date: " + post.reportDate + " | Drive Capacity: " + post.capacity} 
    <Content />
</PostLayout>