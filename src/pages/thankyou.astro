---
import BaseLayout from "@layouts/BaseLayout.astro";
import { Image } from "astro:assets";
---
<BaseLayout sideBarActiveItemID="contact">

    <div class="relative overflow-x-auto p-3 rounded-lg bg-base-100 hover:shadow-xl transition ease-in-out hover:scale-[100%] flex flex-col items-center bg-white border border-gray-200 rounded-lg shadow hover:bg-gray-100 dark:border-gray-700 dark:bg-gray-800 dark:hover:bg-gray-700">

        <div class="items-center">
            <table>
                <tbody>
                    <tr>
                        <th>
                            <Image class="mask" format="png" width={200} height={200} src="/favicon.png" alt="Logo" />
                        </th>
                        <th>
                            <div class="text-5xl font-bold">
                                <center>Support Center <br> Ticket Submission</center>
                            </div>
                        </th>
                    </tr>
                </tbody>
            </table>
        </div>

    </div>

    <br>

    <div class="relative p-3 overflow-x-auto w-full rounded-lg bg-base-100 hover:shadow-xl transition ease-in-out hover:scale-[100%] flex flex-col items-center bg-white border border-gray-200 rounded-lg shadow hover:bg-gray-100 dark:border-gray-700 dark:bg-gray-800 dark:hover:bg-gray-700">

        <div class="rounded-lg p-2 bg-base-100 w-full hover:shadow-xl transition ease-in-out hover:scale-[100%]">
     
            <div class="py-0 ">
                <div class="text-xl py-1">Thank you!</div>
                <text class="text-lg">
                Your Message has been Sent!
                <br>
                You should receive a response in 24-48 hours.
                </text>
                <br>
            </div>

        </div>

        <br />
        <a class="text-white bg-gradient-to-r from-blue-500 via-blue-600 to-blue-700 hover:bg-gradient-to-br focus:ring-4 focus:outline-none focus:ring-blue-300 dark:focus:ring-blue-800 shadow-lg shadow-blue-500/50 dark:shadow-lg dark:shadow-blue-800/80 font-medium rounded-lg text-sm px-5 py-2.5 text-center me-2 mb-2" href="/">
            Go Back to Homepage
        </a>

    </div>

    </div>


</BaseLayout>