---
import BaseLayout from "../layouts/BaseLayout.astro";
import HorizontalCard from "../components/HorizontalCard.astro";
import { getCollection, getEntry, getEntries } from "astro:content";
const hddreportlist = await getCollection("hddreports");


---

<BaseLayout title="HDD Reports" sideBarActiveItemID="hddreports" >
  <div class="pd-2 bg-white border border-gray-200 rounded-lg shadow dark:border-gray-700 dark:bg-gray-800 pb-12 mt-5">
    <div class="items-center">
      <br> 
      <div class="text-5xl font-bold"><center>Hard Drive Reports</center></div>
      <br>
    </div>
    <div class="divider my-0" />
    <div class="w-[1500px]">
        {hddreportlist.map((post) => (
          <>
          <HorizontalCard
            title={post.data.make + " - " + post.data.serial + " (" + post.data.type + ")"}
            desc={"Report Date: " + post.data.reportDate.toDateString() + " | Drive Capacity: " + post.data.capacity}
            url={"/hddreports/" + post.slug}
            target=""
          />
            <div class="divider my-0" />
          </>
          ))
        }
    </div></div>
</BaseLayout>