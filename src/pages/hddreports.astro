---
import BaseLayout from "../layouts/BaseLayout.astro";
import HorizontalCard from "../components/HorizontalCard.astro";
import { getCollection, getEntry, getEntries } from "astro:content";
const hddreportlist = await getCollection("hddreports");


---

<BaseLayout title="HDD Reports" sideBarActiveItemID="hddreports" >
    <div class="w-[1500px] relative overflow-x-auto flex flex-col items-center bg-white border border-gray-200 rounded-lg shadow hover:bg-gray-100 dark:border-gray-700 dark:bg-gray-800 dark:hover:bg-gray-700">
      <br>
      <div class="text-5xl font-bold">Hard Drive Reports</div>
      <br>
    </div>
    <div class="w-[1500px]">
        {hddreportlist.map((post) => (
          <>
          <HorizontalCard
            title={post.data.make + " - " + post.data.serial + " (" + post.data.type + ")"}
            desc={"Report Date: " + post.data.reportDate.toDateString() + " | Drive Capacity: " + post.data.capacity}
            url={"/hddreports/" + post.slug}
            target=""
          />
            <div class="divider my-0" />
          </>
          ))
        }
    </div>
</BaseLayout>