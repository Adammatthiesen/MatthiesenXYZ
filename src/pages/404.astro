---
import BaseLayout from "@layouts/BaseLayout.astro";
---

<BaseLayout title = "404: Not Found" includeSidebar={false}>
  <div class="text-center flex-col justify-center place-content-center content-center">
    <h1 class="text-9xl font-bold mt-20 mb-2">\ . : 404 : . /</h1>
    <h3 class="text-2xl">The page you're looking for couldn't be found.</h3>
    <h3 class="text-2xl">It may have moved, or has been deleted.</h3>
    <br />
    <a class="text-white bg-gradient-to-br from-purple-600 to-blue-500 hover:bg-gradient-to-bl focus:ring-4 focus:outline-none focus:ring-blue-300 dark:focus:ring-blue-800 font-medium rounded-lg text-sm px-5 py-2.5 text-center me-2 mb-2" href="/">Back to Home page</a>
  </div>
</BaseLayout>
